{
  "name": "@yourkitchen/common",
  "version": "1.0.2",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "private": true,
  "scripts": {
    "typescript:deploy": "tsc -b",
    "typescript:clean": "rm -f -rf ./dist && rm -f tsconfig.tsbuildinfo",
    "postinstall": "npm run typescript:deploy",
    "lint": "eslint --fix . && prettier --write . --ignore-unknown",
    "lint:staged": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*": "prettier --write --ignore-unknown"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-react",
        {
          "runtime": "automatic"
        }
      ]
    ]
  },
  "dependencies": {
    "@yourkitchen/models": "git+https://github.com/YourKitchen/yourkitchen-models.git",
    "axios": "^1.4.0",
    "buffer": "^6.0.3",
    "gql-query-builder": "^3.8.0",
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@types/node": "16.11.13",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
